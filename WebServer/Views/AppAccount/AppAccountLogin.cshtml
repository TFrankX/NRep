@model AppAccountsLogin
<h2>Charging system login</h2>

<form method="post" asp-controller="AppAccount" asp-action="AppAccountLogin"
     asp-route-returnUrl="@Model.ReturnUrl" asp-route-newStationId="@Model.NewStationId">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="UserName">User Name</label><br />
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <input class="btn btn-dark my-3" type="submit" value="Log in" />
        <input class="btn btn-dark my-3" type="submit" onclick="location.href='@Url.Action("AppAccountLoginSMS", "AppAccount",new { NewStationId=Model.NewStationId })';return false;" value="Log in with SMS" </>
        <input class="btn btn-dark my-3" type="submit" onclick="location.href='@Url.Action("AppCreateSelfAccount", "AppAccountManagement",new { NewStationId=Model.NewStationId })';return false;" value="Register new account" </>
    </div>
    <div>
        @if (@Model.NewStationId > 0)
        {
            <a>
                New station ID:
            </a>
            <a>
                @Html.DisplayFor(Model => Model.NewStationId)
            </a>
        }
    </div>
</form>
